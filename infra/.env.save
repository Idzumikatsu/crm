# Настройки PostgreSQL
POSTGRES_DB=schedule
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
# Хост и порт БД внутри Docker-сети
DB_HOST=db
DB_PORT=5432

# Spring profile
SPRING_PROFILES_ACTIVE=postgres

# Секрет для JWT (сгенерируйте свой, либо оставьте любой для локальных тестов)
JWT_SECRET=$(openssl rand -hex 32)

# Nginx
APP_HOST=app
APP_PORT=8080
SERVER_NAME=localhost

# Порты прокси (на хосте будут 8080/8443, внутри контейнера — 80/443)
NGINX_HTTP_PORT=8080
NGINX_HTTPS_PORT=8443

